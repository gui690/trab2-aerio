<%-include('../cabecalho.ejs')%>

    <body>

        <div class="container">
            <h1>Editar Cotação</h1>
            <form action="" method="post">
                <div class="form-group">
                    <input type="hidden" id="id" name="id" value="<%=Cotacao.id%>"> <!--ID da cotacao -->
                    
                </div>
                <div class="form-group">
                    <label for="origem">Origem  </label>
                    <input type="text" id="origem" name="origem" value="<%=Cotacao.origem%>" required>
                </div>
    
                <div class="form-group">
                    <label for="des">Destino</label>
                    <input type="text" id="des" name="des" step="0.01" value="<%=Cotacao.des%>" required>
                </div>
                
                
            <div class="form-group">
                <label for="dataIda">Idas</label>
                <select id="dataIda" name="dataIda" class="form-control">
                    <option value="">- Selecione -</option>
                   <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option> 
                </select>
            </div>

            <div class="form-group">
                <label for="dataVolta">Idas</label>
                <select id="dataVolta" name="dataVolta" class="form-control">
                    <option value="">- Selecione -</option>
                   <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option> 
                </select>
            </div>
          
                <div class="form-group">
                    <label for="nome">Nome  </label>
                    <input type="string" id="nome" name="nome" value="<%=Cotacao.nome%>" required>
                </div>
    
                <div class="form-group">
                    <label for="contato">Contato  </label>
                    <input type="string" id="contato" name="contato" value="<%=Cotacao.contato%>" required>
                </div>
                 
                <div class="form-group">
                    <label for="status">Status  </label>
                    <input type="string" id="status" name="status" value="<%=Cotacao.status%>" required>
                </div>
    
                <button type="submit">Salvar Cotação</button>
                <button type="submit" class="bnt cancelar">Cancelar</button>
            </form>
        </div>

    </body>

    </html>