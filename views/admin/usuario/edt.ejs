<%-include('.. /cabecalho.ejs')%>

    <body>

        <div class="container">
            <h1>Editar usuario</h1>
            <form action="post">
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" value="Time A" required placeholder="Nome do usuario">
                </div>

                <div class="form-group">
                    <label for="altura">Altura (em metros)</label>
                    <input type="number" id="altura" name="altura" step="0.01" required placeholder="Ex: 1.85">
                </div>

                <div class="form-group">
                    <label for="peso">Peso (em kg)</label>
                    <input type="number" id="peso" name="peso" step="0.1" required placeholder="Ex: 80.5">
                </div>

                <div class="form-group">
                    <label for="posicao">Posição</label>
                    <select id="posicao" name="posicao">
                        <option value="selecione">- Selecione -</option>
                        <option value="zagueiro">Zagueiro</option>
                        <option value="pivo">Pivô</option>
                        <option value="ala">Ala</option>
                    </select>
                </div>

                <button type="submit">Salvar Alterações</button>
            </form>
        </div>

    </body>

    </html>