<%-include('../cabecalho.ejs')%>
<body>

    <div class="form-container">

        <button type="button" class="bnt voltar" onclick="window.history.back()">Voltar</button>

        <h1>Adicionar Aeroporto  </h1>
        <form action="/admin/aeroporto/add" method="post" enctype="multipart/form-data">            
            <div class="form-group">
                <input type="hidden" id="id" name="id" value="<%=Aeroporto.id%>"> <!--ID da cotacao -->
                
            </div>
            <div class="form-group">
                <label for="nome">Nome do aeroporto  </label>
                <input type="text" id="nome" name="nome" required >
            </div>

            <div class="form-group">
                <label for="localizacao">Localização </label>
                <input type="text" id="localizacao" name="localizacao" step="0.01" required >
            </div>
            
            <div class="form-group">
                <label for="foto">Foto </label>
                <input type="file" id="foto" name="foto" step="0.1" vrequired >
            </div>

            <button type="submit">Adicionar Aeroporto</button>
     <button type="button" class="bnt cancelar" onclick="window.history.back()">Cancelar</button>        </form>
    </div>

</body>
</html>
