<%-include('../cabecalho.ejs')%>

    <body>

        <div class="container">

            <form action="/admin/aeroporto/lst" method="post" class="form-inline" style="margin-bottom: 20px;">
                <input type="text" name="pesquisar" placeholder="Pesquisar por nome" required>
                <button type="submit">Pesquisar</button>
              </form>
              
            <h1>aeroporto</h1>
            <div class="add-aeroporto">
                <a href="/admin/aeroporto/add" class="add-btn">+ aeroporto</a>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Localização</th>
                        <th>Foto</th>
                        <th colspan="2">Ações</th> <!-- Adiciona espaço para Editar e Deletar -->
                       
                    </tr>
                </thead>
                <tbody>
                    <%Aeroporto.forEach(function(aeroporto){%>
                    <tr>
                        <td><%=aeroporto.nome%></td>
                        <td><%=aeroporto.localizacao%></td>
                        <td>
                            <img src="/arquivos/<%=aeroporto.foto%>" class="Imenor"/>
                        </td>
                        <td class="action-buttons">
                            <a href="/admin/aeroporto/edt/<%= aeroporto.id %>" class="edit-btn"><i class="fas fa-edit"></i> Editar</a>
                            <a href="/admin/aeroporto/del/<%= aeroporto._id %>" class="delete-btn" onclick="return confirm('Tem certeza que deseja deletar este dado?')">Deletar</a>
                            
                            </td>
                    </tr>
                    <%})%>
                 
                    </tr>
                </tbody>
            </table>
        </div>

    </body>

    </html>